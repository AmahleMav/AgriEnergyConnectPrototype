@model IEnumerable<AgriEnergyConnectPrototype.Models.Product>
@{
    ViewData["Title"] = "All Products";
}

<h2>All Products</h2>

<form method="get" class="mb-3">
    <input type="text" name="location" placeholder="Filter by location" class="form-control mb-1" />
    <input type="text" name="category" placeholder="Filter by category" class="form-control mb-1" />
    <button type="submit" class="btn btn-primary">Apply Filters</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Location</th>
            <th>Production Date</th>
            <th>Farmer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Category</td>
                <td>@product.Location</td>
                <td>@product.ProductionDate.ToShortDateString()</td>
                
            </tr>
        }
    </tbody>
</table>
