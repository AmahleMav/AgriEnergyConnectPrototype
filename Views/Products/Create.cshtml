@model AgriEnergyConnectPrototype.Models.Product
@{
    ViewData["Title"] = "Create Product";
}

<div class="container my-5">
    <h2 class="fw-bold text-success mb-4">Create Product</h2>

    <form asp-action="Create" method="post" class="row g-3">
        <div class="col-md-6">
            <label asp-for="ProductName" class="form-label"></label>
            <input asp-for="ProductName" class="form-control" placeholder="Enter product name" />
            <span asp-validation-for="ProductName" class="text-danger" />
        </div>

        <div class="col-md-6">
            <label asp-for="Category" class="form-label"></label>
            <select asp-for="Category" class="form-select">
                <option>Vegetables</option>
                <option>Dairy</option>
                <option>Meat</option>
                <option>Fruits</option>
                <option>Poultry</option>
            </select>
            <span asp-validation-for="Category" class="text-danger" />
        </div>

        <div class="col-md-6">
            <label asp-for="Location" class="form-label"></label>
            <input asp-for="Location" class="form-control" placeholder="Enter location" />
            <span asp-validation-for="Location" class="text-danger" />
        </div>

        <div class="col-md-6">
            <label asp-for="ProductionDate" class="form-label"></label>
            <input asp-for="ProductionDate" class="form-control" type="date" />
            <span asp-validation-for="ProductionDate" class="text-danger" />
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-success px-4 py-2">Save</button>
            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 ms-2">Cancel</a>
        </div>
    </form>
</div>
