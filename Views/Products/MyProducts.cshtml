@model IEnumerable<AgriEnergyConnectPrototype.Models.Product>
@{
    ViewData["Title"] = "My Products";
}

<div class="container my-5">
    <h2 class="fw-bold text-success mb-4">My Products</h2>

    <a asp-action="Create" class="btn btn-success mb-4">Add New Product</a>

    <!-- Products Grid -->
    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@product.ProductName</h5>
                        <p class="card-text mb-1"><strong>Category:</strong> @product.Category</p>
                        <p class="card-text mb-1"><strong>Location:</strong> @product.Location</p>
                        <p class="card-text"><strong>Date:</strong> @product.ProductionDate.ToShortDateString()</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
