@model IEnumerable<AgriEnergyConnectPrototype.Models.FarmerProfile>
@{
    ViewData["Title"] = "All Farmers";
}

<div class="container my-5">
    <h2 class="fw-bold text-success mb-4">All Farmers</h2>

    <a asp-action="Create" class="btn btn-success mb-4">Add New Farmer</a>

    <div class="row g-4">
        @foreach (var farmer in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@farmer.FirstName @farmer.LastName</h5>
                        <p class="card-text mb-1"><strong>Email:</strong> @farmer.Email</p>
                        <p class="card-text mb-1"><strong>Phone:</strong> @farmer.PhoneNumber</p>
                        <p class="card-text mb-3"><strong>Products:</strong> @farmer.Products?.Count() </p>
                        <a asp-action="Details" asp-route-id="@farmer.FarmerId" class="btn btn-outline-success mt-auto">View Products</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
