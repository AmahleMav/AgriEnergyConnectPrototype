@model AgriEnergyConnectPrototype.Models.FarmerProfile
@{
    ViewData["Title"] = "Farmer Details";
}

<div class="container my-5">
    <!-- Farmer Info -->
    <div class="mb-5 text-center">
        <h2 class="fw-bold text-success">@Model.FirstName @Model.LastName</h2>
        <p class="mb-1"><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone:</strong> @Model.PhoneNumber</p>
    </div>

    <!-- Products Section -->
    <h4 class="fw-bold text-success mb-4">Products by @Model.FirstName</h4>

    @if (Model.Products != null && Model.Products.Any())
    {
        <div class="row g-4">
            @foreach (var product in Model.Products)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">@product.ProductName</h5>
                            <p class="card-text mb-1"><strong>Category:</strong> @product.Category</p>
                            <p class="card-text mb-1"><strong>Location:</strong> @product.Location</p>
                            <p class="card-text mb-3"><strong>Date:</strong> @product.ProductionDate.ToShortDateString()</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No products found for this farmer.</p>
    }
</div>
